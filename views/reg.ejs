    <img src="./img/reg.jpg" alt="image">
  </div>
  <div class="container">
    <h1>Register</h1>
    
    <form id="loginForm" action="/register" method="POST">
      
      
        <label for="Username">Username</label>
      <input type="text" id="Username" name="Username" required>
      <label for="Email">Email:</label>
      <input type="email" id="Email" name="Email" required>
      <label for="Password">Password:</label>
      <input type="password" id="Password" name="Password" required onkeyup="checkPasswordStrength(this.value)">
      
      <div id="password-strength"></div>
      
      <button type="submit" id="registerButton" disabled>Register</button>
      
      <script>
      function checkPasswordStrength(password) {
          let strength = 0;
      
          // Length check
          if (password.length >= 8) {
              strength += 1;
          }
      
          // Complexity check
          if (password.match(/[a-z]/) && password.match(/[A-Z]/)) {
              strength += 1;
          }
          if (password.match(/[0-9]/)) {
              strength += 1;
          }
          if (password.match(/[$&+,:;=?@#|'<>.^*()%!-]/)) {
              strength += 1;
          }
      
          // Update password strength text
          let strengthText = '';
          switch (strength) {
              case 0:
              case 1:
                  strengthText = 'Weak';
                  break;
              case 2:
                  strengthText = 'Moderate';
                  break;
              case 3:
              case 4:
                  strengthText = 'Strong';
                  break;
              default:
                  break;
          }
      
          // Update text color based on strength
          let strengthColor = '';
          switch (strength) {
              case 0:
              case 1:
                  strengthColor = 'red'; // Weak password color
                  break;
              case 2:
                  strengthColor = 'orange'; // Moderate password color
                  break;
              case 3:
              case 4:
                  strengthColor = 'green'; // Strong password color
                  document.getElementById('registerButton').disabled = false; // Enable button for strong password
                  break;
              default:
                  break;
          }
      
          // Display password strength with color
          document.getElementById('password-strength').innerText = 'Password Strength: ' + strengthText;
          document.getElementById('password-strength').style.color = strengthColor;
      }
      </script>
      

    </form>
